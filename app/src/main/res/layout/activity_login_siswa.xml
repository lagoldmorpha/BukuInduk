<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baground_login"
    android:gravity="center"
    tools:context=".LoginSiswaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/baground_card"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masuk"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Masukan NISN dan Tanggal Lahir untuk masuk"
            android:textAlignment="center" />

        <!-- Input NISN -->
        <EditText
            android:id="@+id/et_nisn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/baground_input"
            android:hint="NISN"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="@color/gray"
            android:inputType="number" />

        <!-- Input Tanggal Lahir -->
        <EditText
            android:id="@+id/et_tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/baground_input"
            android:hint="Tanggal Lahir (DD/MM/YYYY)"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="@color/gray"
            android:inputType="date" />

        <!-- Tombol Masuk -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/baground_button_primary"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <!-- Tombol Kembali -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/baground_button_secondary"
            android:text="Kembali"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>